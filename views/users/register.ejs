<%- layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center mb-5">Register</h1>
    <div class="col-6 offset-3">

      <form action="/register" method="POST" novalidate class="validated-form">
        <div class="mb-3">
          <label class="form-label" for="username">Enter Username: </label>
          <input class="form-control" type="text" name="user[username]" id="username" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="email">Enter Email: </label>
          <input class="form-control" type="email" name="user[email]" id="email" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <div class="mb-3">
          <label class="form-label" for="password">Enter Password: </label>
          <input class="form-control" type="password" name="user[password]" id="password" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>

        <button class="btn btn-success">Register</button>

      </form>
    </div>
  </div>